# deploy/env.example
# Copy this file to .env.prod and fill in the actual values

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ENVIRONMENT=production
ALLOWED_HOSTS=ubongoiq.com,www.ubongoiq.com,*.ubongoiq.com

# Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=ubongo_production
DATABASE_USER=ubongo_user
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=db
DATABASE_PORT=5432

# Read Replica (Optional)
DATABASE_READ_HOST=
DATABASE_READ_USER=
DATABASE_READ_PASSWORD=

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-secure-redis-password

# Email Configuration
EMAIL_HOST=smtp.amazonaws.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-ses-smtp-username
EMAIL_HOST_PASSWORD=your-ses-smtp-password
DEFAULT_FROM_EMAIL=noreply@ubongoiq.com
SERVER_EMAIL=server@ubongoiq.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=ubongo-production-media
AWS_S3_REGION_NAME=us-east-1

# CloudFront Configuration (Optional)
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net
AWS_CLOUDFRONT_ID=E1234567890ABC

# Security Settings
ADMIN_URL=secure-admin/
WAGTAILADMIN_BASE_URL=https://ubongoiq.com

# Admin Configuration
ADMIN_EMAIL=admin@ubongoiq.com
DEVOPS_EMAIL=devops@ubongoiq.com

# Performance Settings
SLOW_REQUEST_THRESHOLD=2.0
LOG_RETENTION_DAYS=30

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Backup Configuration (Optional)
BACKUP_S3_BUCKET=ubongo-backups

# Search Configuration (Optional - Elasticsearch)
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com:9200
ELASTICSEARCH_CA_PATH=/path/to/ca-certs.pem

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Load Balancer (if using)
LOAD_BALANCER_IP=

# App Version (for monitoring)
APP_VERSION=1.0.0